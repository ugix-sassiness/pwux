<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - member</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/pwuxstyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/member.styles.css" asp-append-version="true" />
</head>
<body>
    @* Start Header *@
    <header class="navbar d-flex justify-content-end p-0">

        <div class="navbar-nav">
            <div class="col-4 d-flex">
                <div class="nav-item text-nowrap">
                    <a class="nav-link px-3" href="#"><i class="fa-solid fa-sliders"></i> Settings</a>
                </div>
                <div class="nav-item text-nowrap">
                    <a class="nav-link px-3" href="#"><i class="fa-sharp fa-solid fa-arrow-right-from-bracket"></i> Sign out</a>
                </div>
                <button class="navbar-toggler d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa-solid fa-bars"></i>
                </button>
            </div>
            </div>
    </header>
    @* End Header *@

    <div class="row g-0">
        <div class="wrapper">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-white sidebar collapse">
                <div class="position-sticky pt-2 sidebar-sticky">
                    <div class="text-center pb-5">
                        <img src="https://www.powerwizard.com/wp-content/uploads/2022/01/pw-logo.svg" class="navbar-brand-img logo-light logo-small" alt="..." width="190" height="41">
                    </div>
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted text-uppercase">
                        <span>Electricity</span>
                    </h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">
                                <span data-feather="home" class="align-text-bottom"></span>
                                My Savings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ContractDetails">
                                <span data-feather="file" class="align-text-bottom"></span>
                                Electricity Contract Details
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ReferAFriend">
                                <span data-feather="shopping-cart" class="align-text-bottom"></span>
                                Refer a Friend
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="TransferMyService">
                                <span data-feather="users" class="align-text-bottom"></span>
                                Transfer My Service
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Messages">
                                <span data-feather="bar-chart-2" class="align-text-bottom"></span>
                                Messages <span class="badge text-bg-danger">2</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="PlanRenewal">
                                <span data-feather="layers" class="align-text-bottom"></span>
                                Plan Renewal
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="NewServiceAddress">
                                <span data-feather="layers" class="align-text-bottom"></span>
                                Add a New Service Address
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>


            <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4 ">
                
                <div class="container-fluid">
                <div class="premise-header pt-3 me-3">

                    <div class="row">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h1 class="text-white">My Account</h1>
                                <p class="fs-6 text-white">All your Power Wizard information convieniently accessible from the dropdown.</p>
                            </div>

                            <div>
                                <form class="col-12 col-lg-auto mb-3 mb-lg-0" role="search">
                                    <select class="form-select" aria-label="Default select example">
                                        <option value="1">8921 Briar Forest Drive, Houston, TX 77024</option>
                                        <option value="2">2071 Greenbriar Rd, Houston, TX 77030</option>
                                    </select>
                                </form>
                            </div>

                        </div>
                    </div>


                    <div class="row">
                        <nav class="nav nav-pills nav-fill">
                            <ul class="nav nav-pills nav-fill">
                                <li class="nav-item">
                                    <a class="nav-link active bg-electric-teal-light fw-bold" href="/"><i class="fa-sharp fa-solid fa-bolt-lightning"></i> Electricity</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link fw-bold" href="/Solar" aria-current="page"><i class="fa-sharp fa-solid fa-solar-panel"></i> Rooftop Solar</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link fw-bold" href="/Carbon"><i class="fa-sharp fa-solid fa-cloud"></i> Carbon Neutral</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link fw-bold" href="/HVAC"><i class="fa-solid fa-fan"></i>  HVAC Solutions</a>
                                </li>
                            </ul>

                        </nav>


                    </div>

                </div>
                @RenderBody()
                    </div>
            </main>

        </div>

    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>

