@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="py-4">
    <div class="container">
        <div class="row row-cols-1">
            <div class="col-12">
                <div class="card shadow-sm">
                    News Ticker goes here...
                </div>
            </div>
            </div>
        </div>

    <div class="container mt-3">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <div class="col">
                <div class="card shadow">
                    <div class="bg-light p-4 rounded text-center">
                        <h6 class="fw-normal">Savings Last Bill</h6>
                        <div class="d-flex align-items-center justify-content-center">
                            <h2 class="mb-0 me-2">$56.54</h2>
                            <div class="badge bg-success bg-opacity-10 text-success">40%</div>
                        </div>
                        <div>
                            <small class="mb-0">Your Average Rate</small>
                            <h6 class="fw-normal mb-0">9.4 &#162;</h6>
                        </div>
                        <div>
                            <small class="mb-0">Market Average</small>
                            <h6 class="fw-normal mb-0">15.7 &#162;</h6>
                        </div>
                        <div>
                            <small class="mb-0">Your Usage</small>
                            <h6 class="fw-normal mb-0">899 kWh</h6>
                        </div>
                    </div>
                    </div>
            </div>
            <div class="col">
                <div class="card shadow">
                    <div class="bg-light p-4 rounded text-center">
                        <h6 class="fw-normal">Membership Savings</h6>
                        <div class="d-flex align-items-center justify-content-center">
                            <h2 class="mb-0 me-2">$1,850.86</h2>
                            <div class="badge bg-success bg-opacity-10 text-success">36%</div>
                        </div>
                        <div>
                            <small class="mb-0">Your Average Rate</small>
                            <h6 class="fw-normal mb-0">9.3 &#162;</h6>
                        </div>
                        <div>
                            <small class="mb-0">Market Average</small>
                            <h6 class="fw-normal mb-0">14.5 &#162;</h6>
                        </div>
                        <div>
                            <small class="mb-0">Total Membership Cost</small>
                            <h6 class="fw-normal mb-0">$267</h6>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card shadow">
                    <div class="bg-light p-4 rounded text-center">
                        <h6 class="fw-normal">We saved our members over</h6>
                        <div class="d-flex justify-content-between align-items-center">
                            <!-- Icon -->
                            <div class="icon-lg rounded-circle bg-electric-teal-light text-white mb-0"><i class="fa-solid fa-coins fa-fw"></i></div>
                            <!-- Digit -->
                            <div>
                                <h2 class="mb-0">$5,000,000</h2>
                                <span class="h6 fw-light mb-0">in electricity bills in one year.</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <!-- Current Plan item START -->
                <div class="card shadow">
                    <!-- card-body START -->
                    <div class="card-body p-4 pb-0">
                        <div class="row g-4">
                            <!-- Plan name -->
                            <div class="col-md-4">
                                <!-- Image -->
                                <img src="https://booking.webestica.com/assets/images/element/09.svg" class="w-80px mb-3" alt="">
                                <!-- Title -->
                                <h6 class="fw-normal mb-0">REP Name</h6>
                            </div>

                            <!-- Plan price -->
                            <div class="col-sm-4 col-md-4">
                                <!-- Title -->
                                <h4>TRU-Price</h4>
                                <h2 class="mb-0">10.1 &#162;</h2>
                                <p class="mb-0">Avg EST Monthly Cost<h2>$230</h2> </p>
                            </div>

                            <!-- Plan detail -->
                            <div class="col-sm-4 col-md-4">
                                <!-- Title -->
                                <h4>Plan Details</h4>
                                <p class="mb-0">
                                    <ul class="list-unstyled">
                                        <li>12-month term</li>
                                        <li>$120 Early Termination</li>
                                        <li><a href="#" class="card-link">Electricity Facts Label</a></li>
                                        <li><a href="#" class="card-link">Terms of Use</a></li>
                                        <li><a href="#" class="card-link">YRCA</a></li>
                                    </ul>
                                </p>
                            </div>
                        </div>
                    </div>
                    <!-- card-body END -->
                    <!-- card footer -->
                    <div class="card-footer p-2">
                        <div class="bg-light p-2 rounded-2">
                            <ul class="list-inline d-sm-flex justify-content-sm-between mb-0 mx-4">
                                <li class="list-inline-item text-success">
                                    <button class="btn btn-link text-decoration-underline p-0 mb-0" data-bs-toggle="modal" data-bs-target="#flightdetail">
                                        Estimated Bill Details
                                    </button>
                                </li>
                                <li class="list-inline-item text-success">
                                    <button class="btn btn-link text-decoration-underline p-0 mb-0" data-bs-toggle="modal" data-bs-target="#flightdetail">
                                        View More Plans
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Ticket item END -->
            </div>
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body rounded text-center">
                        <p class="card-text">Typical Usage for Your Home</p>
                        <canvas id="myChart">
                        </canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card shadow">
                    <img src="https://fastly.picsum.photos/id/353/5000/2806.jpg?hmac=QvrRaGlMinnGfuGM-yhcEwdMbIM3MXXyo0dC7PqqGc0" class="card-img" alt="card-img-overlay">
                    <div class="card-img-overlay">
                        <h5 class="card-title">Card title</h5>
                        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
                        <p class="card-text">Last updated 3 mins ago</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow">
                    <img src="https://fastly.picsum.photos/id/353/5000/2806.jpg?hmac=QvrRaGlMinnGfuGM-yhcEwdMbIM3MXXyo0dC7PqqGc0" class="card-img" alt="card-img-overlay">
                    <div class="card-img-overlay">
                        <h5 class="card-title">Card title</h5>
                        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
                        <p class="card-text">Last updated 3 mins ago</p>
                    </div>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>const ctx = document.getElementById('myChart');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Jan 31', 'Feb 31', 'Mar 31', 'Apr 31', 'May 31', 'Jun 31', 'Jul 31', 'Aug 31', 'Sep 31', 'Oct 31', 'Nov 31', 'Dec 31'],
                    datasets: [{
                        label: 'Killowatt Hours',
                        data: [6, 12, 19, 3, 5, 2, 3, 4, 13, 10, 7, 16],
                        borderWidth: 1
                    }]
                },
                options: {
                    plugins: {
                        legend: {
                            display:false
                            }
                        },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });</script>
        @* Start Desktop Footer *@
        <footer>
            <div class="container px-0">
                <div class="rounded-top p-4 pb-0 bg-footer-color">

                    <!-- Divider -->
                    <hr class="mt-4 mb-0">

                    <!-- Bottom footer -->
                    <div class="container py-3 px-0">
                        <div class="d-md-flex justify-content-between align-items-center text-md-left">
                            <!-- copyright text -->
                            <div class="text-primary-hover">
                                ©2023 Power Wizard. All rights reserved<p>
                                    PUCT Certificate #BR190584
                                </p>
                            </div>
                            <!-- copyright text -->
                            <!-- terms of service link -->
                            <div class="text-primary-hover">
                                Terms of Service / Privacy Policy
                            </div>
                            <!-- terms of links-->
                            <div class="mt-3 mt-md-0">
                                <ul class="nav text-primary-hover justify-content-center justify-content-md-end">
                                    <li class="nav-item">
                                        <a class="nav-link text-reset" href="#"><i class="fab fa-facebook-f"></i></a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-reset" href="#"><i class="fab fa-twitter"></i></a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-reset" href="#"><i class="fab fa-instagram"></i></a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-reset" href="#"><i class="fab fa-linkedin-in"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        @* End Desktop Footer *@
    </div>
</div>